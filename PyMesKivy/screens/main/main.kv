<MainScreen>
    title: 'Главный'
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 0.8
        pos_hint: {'center_x': .5, 'center_y': 0.5}
        padding: 7
        spacing: 7

        Button:
            text: 'Ok'
            size_hint: None, None
            size: dp(50), dp(25)
            opposite_colors: True
            elevation_normal: 8
            pos_hint: {'center_x': .97, 'center_y': 0.1}

        GridLayout:

            spacing: 10

            size_hint: 1, .2
            rows:2
            cols:2
            Label:
                text: 'Login:'
                markup: True
                color:  [255,255,255,255]
                size_hint: .2, None
                size: dp(0), dp(30)

            TextInput:
                id: name_field
                multiline: False
                hint_text: 'Введите логин'
                size_hint: 0.6, None
                size: dp(0), dp(30)

            Label:
                text: 'Password:'
                markup: True
                color:  [255,255,255,255]
                size_hint: .2, None
                size: dp(0), dp(30)

            TextInput:
                id: name_field
                multiline: False
                hint_text: 'Введите пароль'
                size_hint: 0.6, None
                size: dp(0), dp(30)



